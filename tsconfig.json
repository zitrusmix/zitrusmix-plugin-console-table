{
    "compilerOptions": {
        "outDir": "./dist/",
        "rootDir": "./",
        "removeComments": false,
        "allowJs": true,
        "checkJs": true,
        "strict": true,
        "noEmit": false,
        "declaration": true,
        "declarationMap": true,
        "target": "es2017",
        "strictNullChecks": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "lib": ["es2019"],
        "noImplicitThis": true,
        "noImplicitAny": false,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "module": "commonjs",

        "sourceMap": true,
        "inlineSourceMap": false
    },
    "include": [
        "./index.*",
        "./src/**/*",
        "./test/**/*"
    ]
}
